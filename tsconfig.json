{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "src/custom-types.d.ts"],
  "typeRoots": ["./src/types", "./node_modules/@types"]
}
